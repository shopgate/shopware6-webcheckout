{% sw_extends '@Storefront/storefront/base.html.twig' %}

{# pass sw-context-token to the login pipeline call #}
{# In SW 6.7+ context.token is not accessible in Twig, so we use page extension data #}
{% set sgWebcheckoutOptions = sgWebcheckoutOptions|default({})|replace_recursive({
    properties: {
        token: page.extensions.sg_webcheckout_data.contextToken|default('')
    }
}) %}

{% block base_body_inner %}

    {% block sgwebcheckout_spinner %}
        {% sw_include '@SgateWebcheckoutSW6/sgwebcheckout/component/spinner.html.twig' %}
    {% endblock %}

    {% block base_scroll_up %}
        {# empty #}
    {% endblock %}

    {% block base_cookie_permission %}
        {# empty #}
    {% endblock %}

    {% block base_pseudo_modal %}
        {# empty #}
    {% endblock %}

{% endblock %}
